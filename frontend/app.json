{
  "expo": {
    "name": "capsule_care",
    "slug": "capsule_care",
    "extra": {
      "API": "http://localhost:3000"
    },
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "capsule_care",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "newArchEnabled": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "capsule_care necesita acceso a tu ubicaci贸n para mostrarte informaci贸n basada en tu ubicaci贸n.",
        "NSContactsUsageDescription": "capsule_care necesita acceso a tus contactos para ayudarte a gestionar tus recordatorios de medicaci贸n."
      }
    },
    "android": {
      "permissions": [
        "android.permissions.INTERNET",
        "android.permissions.ACCESS_FINE_LOCATION",
        "android.permissions.ACCESS_COARSE_LOCATION",
        "android.permissions.READ_CONTACTS"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "entryPoint": "./node_modules/expo-router/entry"
  }
}
